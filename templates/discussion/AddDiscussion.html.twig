<!DOCTYPE html>
<html>
<head>
    <style>
        .form-container {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    background-color: #f4f4f4;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.vb {
    margin-top: 20px;
}

.discussion {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
}

.form-group {
    margin-bottom: 20px;
}


.form-label {
    display: block;
    color: #000;
    margin-bottom: 5px;
}

.form-input {
    width: 100%;
    padding: 10px;
    border: 2px solid #ccc;
    border-radius: 4px;
    font-size: 16px;
}

.error-message {
    color: red;
}

.form-button {
    padding: 10px 20px;
    color: #fff;
    background-color: #3e08d3;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
    transition: background-color 0.3s ease;
}

.form-button:hover {
    background-color: #2d0675;
}

    </style>
</head>
<body>
{{ form_start(form, {'attr': {'class': 'form-container'}}) }}

    <div class="vb">
        

        <div class="form-group">
            {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.titre, {'attr': {'class': 'form-input', 'placeholder': 'Entrer le titre de la discussion'}}) }}
            <label  class="error-message">{{ form_errors (form.titre) }}</label>

        </div>

        <div class="form-group">
            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-input', 'placeholder': 'Entrer la description de la discussion'}}) }}
            <label class="error-message">{{ form_errors (form.description) }}</label>

        </div>

        <div class="form-group">
            {{ form_label(form.colorCode, 'Couleur', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.colorCode, {'attr': {'class': 'form-input', 'placeholder': 'Entrer la couleur de la discussion'}}) }}
            
        </div>
         <div class="form-group">
            {{ form_row(form.recaptcha) }} 
            {{ form_errors(form.recaptcha, { 'attr': {'style': 'color: red;'} }) }}
            
        </div>

        <div class="form-group">
            {{ form_widget(form.save, {'label': 'Enregistrer', 'attr': {'class': 'form-button'}}) }}
        </div>

    </div>

{{ form_end(form) }}

</body>
</html>
